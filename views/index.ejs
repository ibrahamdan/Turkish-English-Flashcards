<!-- views/index.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Fluent in a Flip - Turkish-English Flashcard</title>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
  <style>
    body {
      font-family: 'Roboto', sans-serif;
      display: flex;
      flex-direction: column;
      align-items: center;
      background: linear-gradient(135deg, #3498db, #2ecc71);
      background-size: cover;
      background-repeat: no-repeat;
      margin: 0;
      height: 100vh;
    }

    #title-container {
      margin-top: 10vh;
      font-family: 'Poppins', sans-serif;
      font-size: 36px;
      color: #fff;
    }

    #flashcard-container {
      width: 300px;
      height: 200px;
      margin-top: 24vh;
      position: relative;
      cursor: pointer;
      perspective: 1000px
    }

    #flashcard-inner {
      width: 100%;
      height: 100%;
      transform-style: preserve-3d;
      transition: transform 0.5s;
      border-radius: 8px;
      box-shadow: 0 10px 20px rgba(0, 0, 0, 0.2);
    }

    #flashcard-container.flip #flashcard-inner {
      transform: rotateY(180deg);
    }

    #flashcard-front,
    #flashcard-back {
      width: 100%;
      height: 100%;
      position: absolute;
      backface-visibility: hidden;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      border-radius: 8px;
    }

    #flashcard-front {
      background-color: #3498db;
      color: #fff;
      font-family: 'Poppins', sans-serif;
      font-size: 24px;
    }

    #flashcard-back {
      background-color: #2ecc71;
      transform: rotateY(180deg);
      color: #fff;
      font-family: 'Poppins', sans-serif;
      font-size: 24px;
    }

    #flashcard-container p {
      margin: 0;
      padding: 10px;
      font-size: 24px;
      text-align: center;
    }
  </style>
</head>
<body>
  <div id="title-container">Fluent in a Flip</div>

  <div id="flashcard-container" onclick="flipFlashcard()">
    <div id="flashcard-inner">
      <div id="flashcard-front">
        <p><%= word.word_tr %></p>
      </div>
      <div id="flashcard-back">
        <p><%= word.word_tr %></p>
        <p><%= word.word_en %></p>
      </div>
    </div>
  </div>

  <script>
    function flipFlashcard() {
      const flashcard = document.getElementById('flashcard-container');
      flashcard.classList.toggle('flip');
    }
  </script>
</body>
</html>
